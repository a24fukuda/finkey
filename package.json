{
  "name": "finkey",
  "version": "0.4.1",
  "description": "Finkey - Spotlight-like shortcut key finder for Windows and Mac",
  "scripts": {
    "tauri": "tauri",
    "dev": "tauri dev",
    "build": "npm run build:ts && tauri build",
    "build:debug": "npm run build:ts && tauri build --debug",
    "build:ts": "esbuild src/search.ts src/keyguide.ts src/keybindings.ts src/about.ts --bundle --outdir=src --format=esm --target=es2020",
    "watch:ts": "esbuild src/search.ts src/keyguide.ts src/keybindings.ts src/about.ts --bundle --outdir=src --format=esm --target=es2020 --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "check": "npm run typecheck && npm run lint"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tauri-apps/cli": "^2",
    "esbuild": "^0.27.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-shell": "^2",
    "@tauri-apps/plugin-global-shortcut": "^2"
  }
}
