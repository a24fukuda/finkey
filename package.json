{
  "name": "shortcut-finder",
  "version": "1.0.0",
  "description": "Spotlight-like shortcut key finder for Windows and Mac",
  "scripts": {
    "tauri": "tauri",
    "dev": "tauri dev",
    "build": "npm run build:ts && tauri build",
    "build:debug": "npm run build:ts && tauri build --debug",
    "build:ts": "esbuild src/app.ts --bundle --outfile=src/app.js --format=esm --target=es2020",
    "watch:ts": "esbuild src/app.ts --bundle --outfile=src/app.js --format=esm --target=es2020 --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "check": "npm run typecheck && npm run lint"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tauri-apps/cli": "^1.5",
    "esbuild": "^0.27.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5"
  }
}
