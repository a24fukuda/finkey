{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Finkey",
  "identifier": "com.finkey.app",
  "build": {
    "beforeDevCommand": "npm run watch:ts",
    "beforeBuildCommand": "npm run build:ts",
    "frontendDist": "../src"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "label": "search",
        "url": "search.html",
        "fullscreen": false,
        "resizable": false,
        "title": "Finkey",
        "width": 680,
        "height": 520,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": true
      },
      {
        "label": "keyguide",
        "url": "keyguide.html",
        "fullscreen": false,
        "resizable": false,
        "title": "キーガイド",
        "width": 400,
        "height": 150,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": false
      },
      {
        "label": "keybindings",
        "url": "keybindings.html",
        "fullscreen": false,
        "resizable": true,
        "title": "キーバインド設定",
        "width": 800,
        "height": 600,
        "minWidth": 640,
        "minHeight": 480,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false,
        "focus": true
      },
      {
        "label": "about",
        "url": "about.html",
        "fullscreen": false,
        "resizable": false,
        "title": "Finkeyについて",
        "width": 320,
        "height": 360,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false,
        "focus": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "A Spotlight-like shortcut key finder for Windows and Mac",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "Finkey - Shortcut Key Finder",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
